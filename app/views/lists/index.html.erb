<div class="container">
  <h1>All the lists</h1>
    <div class="row g-4">
      <% @lists.each do |list| %>
          <% if list.photo.attached? %>
            <div class="card-category col-sm" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')">
          <% else %>
            <div class="card-category col-sm">
          <% end %>
          <%= link_to list.name, list_path(list) %>
        </div>
      <% end %>
    </div>
</div>


<%= link_to "Create a new list", new_list_path  %>
